#!/usr/bin/perl
use strict;
use warnings;
use lib '/usr/local/freepanel';
use FreePanel::Admin::Apache;

if ($#ARGV < 0) {
        print ("Usage: $0 <domain1> <domain2> ..\n");
        exit();
}

my $apache = FreePanel::Admin::Apache->new();
foreach my $domain (@ARGV) {
        $apache->rm_vhost($domain);
}
