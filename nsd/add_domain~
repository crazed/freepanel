#!/usr/bin/perl
use strict;
use Nsd;

if ($#ARGV < 0) {
	print ("Usage: add_domain.pl <domain1> <domain2> ...\n");
	exit();
}

main();

sub main {
	my $domains_added = $#ARGV+1;
	my $total_domains = $#ARGV+1;
	my $nsd = new DP::Nsd();

	# loop through each domain and add as necessary
	my $domain;
	foreach my $arg (0 .. $#ARGV) {
		$domain = lc($ARGV[$arg]);
		
		if (!$nsd->addDomain($domain)) {
			--$domains_added;
		}

	}

	print("[=]:  $domains_added/$total_domains domains added.\n");
	return 1;
}


